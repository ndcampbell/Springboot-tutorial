<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.in28minutes.spring.basic"/>
    <bean id="xmlJdbcConnection" class="com.in28minutes.spring.basic.springin5steps.xml.XmlJdbcConnection">
        <!-- collaborators and configuration for this bean go here -->
    </bean>

    <bean id="xmlPersonDao" class="com.in28minutes.spring.basic.springin5steps.xml.XmlPersonDAO">
        <!-- collaborators and configuration for this bean go here -->
        <property name="xmlJdbcConnection" ref="xmlJdbcConnection"/>
    </bean>

    <!-- more bean definitions go here -->

</beans>